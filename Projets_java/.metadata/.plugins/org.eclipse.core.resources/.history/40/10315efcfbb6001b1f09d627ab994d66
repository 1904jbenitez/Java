import java.util.*;

public class Convertisseur_Temperature {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println("Convertisseur degrés Celsius et degrés Fahrenheit");
		System.out.println("-------------------------------------------------------------");
		Scanner sc = new Scanner(System.in);
		char mode =' ';
		String test = "";
		do
		{
		
			do {
		
		System.out.println("Choisissez le mode de conversion ! ");	
		
		System.out.println("1 - Convertisseur Celsius --> Fahrenheit");
		System.out.println("2 - Convertisseur Fahrenheigt --> Celsius");
		
		test = sc.nextLine();
		mode = sc.nextLine().charAt(0);
		
		if (mode!='1' && mode!='2' && test.length()>1)
		{
			
		System.out.println("Mode inconnu !!! veuillez reiterer l'operation");
		
		}
		
		}while ((mode !='1' && mode !='2') || test.length()>1);
		
		if (mode =='1')
		{
			System.out.println("Veuillez rentrer le nombre de degrés celsius à convertir");
			double f = sc.nextDouble();
			double c = f*(9/5)+32;
			System.out.println("Temperature equivalente en fahrenheit: "+f);
		}
		else
		{
			System.out.println("Veuillez rentrer le nombre de degrés fahrenheit à convertir");
			double f = sc.nextDouble();
			double c = (f-32)*5/9;
			System.out.println("Temperature equivalente en celsius: "+c);
		}
		sc.nextLine();
		System.out.println("Voulez vous convertir une autre temperature O/N");
		String rep = sc.nextLine();
		}
	
		while (rep.chrAt(0)=='O' && rep.length()<2);
	
	}

}
